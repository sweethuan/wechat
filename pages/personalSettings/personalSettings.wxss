/* pages/personalSettings/personalSettings.wxss */
page,
.container{
  height: 100%;
  background-color: #eee;
}
.header {
  display: flex;
  height: 100px;
  padding: 0 16px;
  color: rgb(151, 149, 32);
  background-color: #00608A;
  justify-content: space-between;
  align-items: center;
}
.avatar {
  width: 60px;
  height: 60px;
  padding: 1px;
  border-radius: 50%;
  margin-right: 18px;
  background-color: #fff;
}
.avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.userName {
  font-size: 16px;
  flex: 1;
}
.updata-psw {
  float: right;
  font-size: 12px;
  color: #999;
}
.persData {
  background-color: #fff;
  font-size: 16px;
  margin: 6px 0;
  color: #555;
  padding: 0 16px;
}
.persData view {
  padding: 6px 0;
}
.persData .title {
  font-weight: 600;
}
.persData .title text{
  float: right;
}
.persData view text{
  margin-left: 16px;
}
.persData view text.fr{
  float: right;
}
.persData view ~ view{
  border-top: 1px solid #eee;

}
.changeMsg {
  display: inline-block;
  border: 1px solid #eee;
  border-radius: 6px;
  height: 32px;
  vertical-align: middle;
  margin-left: 16px;
  text-align: left;
  padding: 0 10px;
}
.change-pwd text::before {
  content: '*';
  color: red;
  margin-right: 4px;
}
.change-pwd text {
  display: inline-block;
  width: 30%;
  text-align: right;
}
.change-pwd .changeMsg {
  width: 56%;
}
.phcolor {
  font-size: 12px;
}
.change-pwd .new-pwd {
  margin: 10px 0;
}
.change-avatar image {
  width: 100%;
  border-radius: 10px;
}